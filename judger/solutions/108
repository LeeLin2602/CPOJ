def ans(N, money):
	if len(money) <= 2: return sum(money)
	dp = [0] * N
	max_v = 0
	dp[0] = money[0]
	for i in range(1, N):
		dp[i] = max(dp[i - 1], dp[i - 2] if i != 1 else 0) + money[i]
		max_v = max(max_v, dp[i])
	return max_v

N = int(input())
if N != 0:
	money = [int(i) for i in input().split()]
else:

	money = []
print(ans(N, money))