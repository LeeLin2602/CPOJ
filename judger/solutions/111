def ans(N, money):
	if len(money) <= 2: return sum(money)
	dp = [0] * N
	max_v = 0
	dp[0] = money[0]
	for i in range(1, N):
		dp[i] = max(dp[i - 1], dp[i - 2] if i != 1 else 0) + money[i]
	return dp[i]

N = int(input())
if N == 0:
	print(0)
	exit()
M = [int(i) for i in input().split()]
if N <= 2:
	print(sum(M))
	exit()
print(ans(N, M))