#include<iostream>

using namespace std;

int map[1000][1000];
int ROW,COL;

int func(int,int);

int main(){
	ios::sync_with_stdio(false);
	cin.tie(0);
	
	cin>>ROW>>COL;
	for(int t=0;t<ROW;t++)
		for(int i=0;i<COL;i++)
			map[t][i]=0;	
			
	map[ROW-1][0]=1;		
	func(0,COL-1);
	cout<<map[0][COL-1];
	return 0;
}

int func(int row,int col){
      if(map[row][col])
                return  map[row][col]%1000000007;
	if(row!=ROW-1 && col)
		map[row][col]=func(row+1,col)+func(row,col-1);
	else if(row!=ROW-1 && col==0)
		map[row][col]=func(row+1,col);
	else if(row==ROW-1 && col)
		map[row][col]=func(row,col-1);
	return map[row][col]%1000000007;
}