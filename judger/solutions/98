#include<iostream>

using namespace std;

int map[1000][1000];
int ROW,COL;


int main(){
	ios::sync_with_stdio(false);
	cin.tie(0);
	
	cin>>ROW>>COL;
	for(int t=0;t<ROW;t++)
		for(int i=0;i<COL;i++)
			map[t][i]=0;	
			
	map[ROW-1][0]=1;		
  for(int t=ROW-1;t>=0;t--){
    for(int i=0;i<COL;i++){
      if(t!=ROW-1 && i)
        map[t][i]=map[t+1][i]+map[t][i-1];
      else if(t!=ROW-1 && i==0)
        map[t][i]=map[t+1][i];
      else if(t==ROW-1 && i)
        map[t][i]=map[t][i-1];
    }
  }
	cout<<map[0][COL-1];

	return 0;
}

